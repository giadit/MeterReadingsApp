<?xml version="1.0" encoding="utf-8"?>
<!-- Wrap in ScrollView to handle long list of OBIS codes -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neuen Zähler anlegen"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zählernummer">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newMeterNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energieart"
            android:layout_marginTop="16dp"/>
        <Spinner
            android:id="@+id/spinnerEnergyType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

        <!-- Label for the Spinner -->
        <TextView
            android:id="@+id/meterTypeSpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zählertyp"
            android:layout_marginTop="16dp"/>
        <Spinner
            android:id="@+id/spinnerMeterType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

        <!-- Non-interactable display for Wärme/Gas -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/meterTypeDisplayLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Zählertyp"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/meterTypeDisplayEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusable="false"
                android:textColor="@android:color/darker_gray" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- REMOVED: Static Initial Reading Input -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum des Anfangszählerstands"
            android:layout_marginTop="16dp"/>
        <DatePicker
            android:id="@+id/newMeterReadingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"/>

        <!-- START: Added OBIS Code Checklist -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ablesedaten auswählen:"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <!-- Container for dynamically added checkboxes AND input fields -->
        <LinearLayout
            android:id="@+id/obisChecklistContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>
        <!-- END: Added OBIS Code Checklist -->

    </LinearLayout>
</ScrollView>