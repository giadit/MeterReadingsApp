<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    app:strokeWidth="2dp"
    app:strokeColor="@android:color/transparent"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/energyTypeIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/energy_type_icon_description"
                    android:scaleType="fitCenter"
                    tools:src="@drawable/ic_bolt"
                    app:tint="@android:color/holo_red_dark" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/meterNumberTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        tools:text="105251-M17" />
                    <TextView
                        android:id="@+id/meterEnergyTypeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="2dp"
                        tools:text="Strom" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:text="Letzter ZÃ¤hlerstand: " />
                <TextView
                    android:id="@+id/meterLastReadingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    tools:text="80792.5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:text="Datum: " />
                <TextView
                    android:id="@+id/meterLastReadingDateTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    tools:text="29.12.2023" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/readingValueInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintEnabled="false"
                app:boxBackgroundMode="outline"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:boxStrokeColor="@drawable/text_input_stroke_color_selector">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/newReadingValueEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="@string/enter_reading_hint"
                    tools:text="1234.5" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="end">
                <ImageButton
                    android:id="@+id/changeMeterButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button_orange_background"
                    android:src="@drawable/ic_change"
                    android:contentDescription="Change Meter"
                    app:tint="@android:color/white"
                    android:padding="12dp"
                    android:scaleType="fitCenter" />
                <ImageButton
                    android:id="@+id/cameraButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_orange_background"
                    android:src="@drawable/ic_camera_white_24"
                    android:contentDescription="@string/camera_button_description"
                    app:tint="@android:color/white"
                    android:padding="12dp"
                    android:scaleType="fitCenter" />
                <ImageButton
                    android:id="@+id/viewImageButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_orange_background"
                    android:src="@drawable/ic_image_white_24"
                    android:contentDescription="@string/view_image_button_description"
                    app:tint="@android:color/white"
                    android:padding="12dp"
                    android:scaleType="fitCenter" />
                <ImageButton
                    android:id="@+id/deleteImageButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_red_background"
                    android:src="@drawable/ic_delete_white_24"
                    android:contentDescription="@string/delete_image_button_description"
                    app:tint="@android:color/white"
                    android:padding="12dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/checkmarkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_checkmark"
            android:visibility="gone"
            app:tint="@color/bright_orange"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

